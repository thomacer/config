# Newsbeuter config file.
# To be placed in ~/.newsbeuter or ~/.config/newsbeuter
always-display-description	true
auto-reload			yes
browser			        firefox
player 		                mpv
cleanup-on-quit			no
download-retries		10
download-timeout		20
# download-full-page              yes
refresh-on-startup		yes
reload-time			10
download-path			~/Dropbox/Article/
max-downloads			2


# BINDS
#
unbind-key              j
bind-key                j down
unbind-key              k
bind-key                k up
bind-key                h quit
unbind-key              l
bind-key                l open


# COLORS

articlelist-format "%4i %f %D %?T?|%-17T| ?%t"

color listnormal color244 color234
color listfocus color166 color235
color info color136 color235
color background color244 color234
color article color244 color234
 
highlight article "^Feed:.*" color174 default
highlight article "^Title:.*" color223 color108 bold
highlight article "^Author:.*" color114 default
highlight article "^Link:.*" color116 default
highlight article "^Date:.*" color223 default
highlight article "\\[[0-9][0-9]*\\]" color66 default bold
highlight article "\\[image [0-9][0-9]*\\]" color109 default bold
highlight article "\\[embedded flash: [0-9][0-9]*\\]" color66 default bold 
