{
  "diagnostic-languageserver.linters": {
    "cpplint": {
      "command": "cpplint --linelength=120",
      "args": ["%file"],
      "debounce": 100,
      "isStderr": true,
      "isStdout": false,
      "sourceName": "cpplint",
      "offsetLine": 0,
      "offsetColumn": 0,
      "formatPattern": [
        "^[^:]+:(\\d+):(\\d+)?\\s+([^:]+?)\\s\\[(\\d)\\]$",
        {
          "line": 1,
          "column": 2,
          "message": 3,
          "security": 4
        }
      ],
      "securities": {
        "1": "info",
        "2": "warning",
        "3": "warning",
        "4": "error",
        "5": "error"
      }
    }
  },
  "diagnostic-languageserver.formatters": {
    "clang-format": {
      "command": "clang-format",
      "args": []
    },
    "uncrustify": {
      "command": "uncrustify -c $(vcs-root)/uncrustify.cfg",
      "args": []
    }
  },
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck",
    "c": "cpplint",
    "cpp": "cpplint",
    "markdown": ["write-good", "markdownlint"]
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt",
    "c": "clang-format",
    "cpp": "clang-format"
  },
  "coc.preferences.formatOnSaveFiletypes": ["sh"],
  "eslint.filetypes": [
    "javascript",
    "typescript",
    "typescriptreact",
    "javascriptreact",
    "typescript.tsx"
  ],
  "languageserver": {
    "efm": {
      "command": "efm-langserver",
      "args": [],
      "filetypes": ["vim", "eruby", "yaml"]
    },
    "coc-clangd": {
      "command": ["/home/tperale/.config/coc/extensions/coc-clangd-data/install/17.0.3/clangd_17.0.3/bin/clangd --fallback-style=none", "/usr/bin/clangd"],
      "rootPatterns": ["compile_flags.txt", "compile_commands.json"],
      "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"]
    }
  },
  "suggest.completionItemKindLabels": {
    "variable": "⬥",
    "function": "",
    "class": "↣",
    "interface": "☍",
    "module": "{}",
    "keyword": "≔",
    "property": "⚲",
    "value": "◰",
    "enum": "◰",
    "field": "☐",
    "method": "",
    "file": "\uf24a",
    "folder": "\uf114"
  },
  "diagnostic.virtualText": true,
  "diagnostic.errorSign": "",
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": "ﯦ",
  "python.linting.flake8Enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.lintOnSave": false
}
