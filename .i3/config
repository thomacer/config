set $darklime #171214
set $blue #131D24
set $lightblue #21424D
set $lightgray #DDEEDD
set $darkgray #444444
set $white #FFFFFF
set $urgentred #BD2849

# Workspace
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
