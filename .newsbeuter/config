# Newsbeuter config file.
# To be placed in ~/.newsbeuter or ~/.config/newsbeuter
always-display-description  true
auto-reload         yes
browser             firefox

player 		        mpv

download-path "~/Podcasts"

cleanup-on-quit		no
download-retries	10
download-timeout	20
download-full-page  yes
refresh-on-startup  yes
reload-time			10
download-path		~/Article/
max-downloads		2
html-renderer "w3m -dump -T text/html"
notify-program "notify-send"


# BINDS
#
unbind-key              j
bind-key                j down
unbind-key              k
bind-key                k up
bind-key                h quit
unbind-key              l
bind-key                l open
unbind-key              g
bind-key                g home
unbind-key              G
bind-key                G end

unbind-key              o
bind-key                o open-in-browser-and-mark-read



# COLORS
articlelist-format "%4i %f %D %?T?|%-17T| ?%t"

#color listnormal color244 color234
#color listfocus color166 color235
#color info color136 color235
#color background color244 color234
#color article color244 color234


color background   default   default
color listnormal   default   default
color listnormal_unread   default   default
color listfocus    black     yellow
color listfocus_unread    black     yellow
color info         default   black
color article      default   default

# highlights
highlight article "^(Title):.*$" blue default
highlight article "https?://[^ ]+" red default
highlight article "\\[image\\ [0-9]+\\]" green default


