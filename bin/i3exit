#!/bin/sh
lock() {
    i3lock
}

case "$1" in
    lock)
	python i3session save
        lock
        ;;
    logout)
	python i3session save
        i3-msg exit
        ;;
    suspend)
	python i3session save
        lock && systemctl suspend
        ;;
    hibernate)
	python i3session save
        lock && systemctl hibernate
        ;;
    reboot)
	python i3session save
        systemctl reboot
        ;;
    shutdown)
	python i3session save
        systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
